<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
    <%= t(:insured) %> <small><%= t(:listing) %></small>
    <%= link_to 'Cadastrar Novo', new_person_path, { class: 'btn btn-primary btn-sm pull-right' } %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th><%= t(:insured) %></th>
            <th><%= t(:person_type) %></th>
            <th><%= t(:contact) %></th>
            <th><%= t(:birth) %></th>
            <th><%= t(:marital_status) %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
          <tr>
            <td><%= person.name %></td>
            <td><%= person.person_type.value %></td>
            <td><%= person.contact %></td>
            <td><%= date_format(person.birth) %></td>
            <td><%= person.marital_status.nil? ? '-' : person.marital_status.value %></td>
            <td><%= link_to t(:edit), edit_person_path(person) %></td>
            <td><%= link_to t(:destroy), person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>