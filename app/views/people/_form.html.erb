<%= form_for(@person) do |f| %>
<div class="row">
  <div class="col-lg-12">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, { class: 'form-control', maxlength: 100 } %>
    </div>
    <div class="form-group">
      <%= f.label :person_type_id %>
      <%= f.collection_select :person_type_id, PersonType.all, :id, :value, { include_blank: true }, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :metier_id %>
      <%= f.collection_select :metier_id, Metier.order('value').all, :id, :value, { include_blank: true }, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :contact %>
      <%= f.text_field :contact, { class: 'form-control', maxlength: 150 } %>
    </div>
    <div class="form-group">
      <%= f.label :birth %>
      <%= f.text_field :birth, value: date_format(@person.try(:birth)), class: "form-control", alt: :date %>
    </div>
    <div class="form-group">
      <%= f.label :marital_status_id %>
      <%= f.collection_select :marital_status_id, MaritalStatus.all, :id, :value, { include_blank: true }, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :gender_id %>
      <%= f.collection_select :gender_id, Gender.order('value').all, :id, :value, { include_blank: true }, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :politically_exposed_person %>
      <div class="input-group">
        <span class="input-group-addon">
          <%= f.check_box :politically_exposed_person %>
        </span>
        <%= f.text_field :politically_exposed_person, value: t(:politically_exposed_person), class: 'form-control', disabled: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :exposed_name %>
      <%= f.text_field :exposed_name, { class: 'form-control', maxlength: 150 } %>
    </div>
    <div class="form-group">
      <%= f.label :occupation_id %>
      <%= f.collection_select :occupation_id, Occupation.order('value').all, :id, :value, { include_blank: true }, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :salary_range_id %>
      <%= f.collection_select :salary_range_id, SalaryRange.all, :id, :value, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= f.submit class: 'btn btn-default'%> <%= link_to t(:back), people_path, { class: 'btn btn-default' } %>
  </div>
</div>
<% end %>